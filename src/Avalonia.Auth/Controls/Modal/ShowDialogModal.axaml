<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:modal="clr-namespace:Avalonia.Auth.Controls.Modal"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             >
    <modal:DialogControl Header="{Binding Title}" CommandText="OK" IsCancelEnabled="True" Command="{Binding AcceptCommand}" MaxHeight="800">
        <ContentPresenter Content="{Binding Content, Mode=TwoWay}" />
    </modal:DialogControl>
</UserControl>