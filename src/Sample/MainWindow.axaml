<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:auth="http://furesoft.de/schemas/auth"
        xmlns:sample="clr-namespace:Sample"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Sample.MainWindow"
        Title="Sample">
    <Window.DataContext>
        <sample:MainWindowViewModel />
    </Window.DataContext>
    <StackPanel Margin="20" Spacing="20" x:DataType="sample:MainWindowViewModel">
        <auth:AuthContext AuthenticatedCommand="{Binding AuthenticatedCommand}"
                              IsVisible="{Binding !IsAuthenticated}" />

        <StackPanel Orientation="Horizontal" IsVisible="{Binding IsAuthenticated}">
            <TextBlock Text="Welcome "  />
            <TextBlock Text="{auth:PrincipalName}"  />
        </StackPanel>
    </StackPanel>
</Window>
